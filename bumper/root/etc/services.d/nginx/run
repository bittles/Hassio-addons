#!/command/with-contenv bashio

bashio::log.info "Starting NGinx..."
# Create required folders
mkdir -p \
  /tmp/nginx/body \
  /var/log/nginx \
  /data/custom_ssl \
  /data/logs \
  /data/access \
  /tmp/nginx/cache/public \
  /tmp/nginx/cache/private \
  /var/cache/nginx/proxy_temp

# Run
exec nginx -g